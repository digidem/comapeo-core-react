{
  "name": "@comapeo/react",
  "version": "0.1.0",
  "description": "React helpers for CoMapeo apps",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/digidem/comapeo-react.git"
  },
  "keywords": [
    "comapeo"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/digidem/comapeo-react/issues"
  },
  "homepage": "https://github.com/digidem/comapeo-react#readme",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "src/",
    "dist/"
