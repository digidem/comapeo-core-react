{
	"name": "@comapeo/react",
	"version": "0.1.0",
	"description": "React helpers for CoMapeo apps",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/digidem/comapeo-react.git"
	},
	"keywords": [
		"comapeo"
	],
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/digidem/comapeo-react/issues"
	},
	"homepage": "https://github.com/digidem/comapeo-react#readme",
	"type": "module",
	"sideEffects": false,
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.js"
		}
	},
	"files": [
		"dist/"
	],
	"scripts": {
		"prepare": "husky",
		"lint:eslint": "eslint --cache .",
		"lint:format": "prettier --cache --check .",
		"lint": "npm-run-all --parallel --continue-on-error --print-label --aggregate-output lint:*",
		"test:unit": "vitest run",
		"test:types": "tsc",
		"test": "npm-run-all --parallel --continue-on-error --print-label --aggregate-output test:*",
		"build:clean": "rimraf ./dist",
		"build:npm": "tsc -p tsconfig.npm.json",
		"build": "npm-run-all build:clean build:npm",
		"prepack": "npm run build"
	},
	"peerDependencies": {
		"@comapeo/core": "*",
		"@comapeo/ipc": "*",
		"@comapeo/schema": "*",
		"@tanstack/react-query": "^5 || ^6",
		"react": "^18 || ^19"
	},
	"devDependencies": {
		"@eslint/compat": "^1.2.4",
		"@eslint/js": "^9.15.0",
		"@mapeo/crypto": "^1.0.0-alpha.10",
		"@tanstack/eslint-plugin-query": "^5.62.1",
		"@testing-library/dom": "^10.4.0",
		"@testing-library/react": "^16.1.0",
		"@types/lint-staged": "^13.3.0",
		"@types/node": "^20.17.9",
		"@types/react": "^19.0.1",
		"@types/react-dom": "^19.0.2",
		"eslint": "^9.16.0",
		"fastify": "^4.29.0",
		"globals": "^15.13.0",
		"husky": "^9.1.7",
		"jsdom": "^25.0.1",
		"lint-staged": "^15.2.10",
		"npm-run-all2": "^7.0.1",
		"prettier": "^3.4.2",
		"random-access-memory": "^6.2.1",
		"rimraf": "^6.0.1",
		"typescript": "^5.7.2",
		"typescript-eslint": "^8.17.0",
		"vitest": "^2.1.8"
	}
}
