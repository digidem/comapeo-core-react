{
	"name": "@comapeo/core-react",
	"version": "4.0.0",
	"description": "React wrapper for working with @comapeo/core",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/digidem/comapeo-core-react.git"
	},
	"keywords": [
		"comapeo"
	],
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/digidem/comapeo-core-react/issues"
	},
	"homepage": "https://github.com/digidem/comapeo-core-react#readme",
	"authors": [
		"Andrew Chou <achou@awana.digital>"
	],
	"type": "module",
	"exports": {
		".": {
			"import": {
				"types": "./dist/esm/index.d.ts",
				"default": "./dist/esm/index.js"
			},
			"require": {
				"types": "./dist/commonjs/index.d.ts",
				"default": "./dist/commonjs/index.js"
			}
		},
		"./package.json": "./package.json"
	},
	"main": "./dist/commonjs/index.js",
	"types": "./dist/commonjs/index.d.ts",
	"module": "./dist/esm/index.js",
	"files": [
		"dist/",
		"docs/API.md"
	],
	"tshy": {
		"project": "./tsconfig.build.json",
		"selfLink": false,
		"exports": {
			".": "./src/index.ts",
			"./package.json": "./package.json"
		}
	},
	"scripts": {
		"docs:generate": "tsdoc --src=src/contexts/*,src/hooks/*,src/lib/types.ts --dest=docs/API.md --noemoji --types",
		"lint:eslint": "eslint --cache .",
		"lint:format": "prettier --cache --check .",
		"lint": "npm-run-all --parallel --continue-on-error --print-label --aggregate-output lint:*",
		"prepack": "tshy",
		"prepare": "husky",
		"test": "vitest run",
		"types": "tsc"
	},
	"peerDependencies": {
		"@comapeo/core": "^3.0.0",
		"@comapeo/ipc": "^3.0.0",
		"@comapeo/schema": "*",
		"@tanstack/react-query": "^5",
		"react": "^18 || ^19"
	},
	"devDependencies": {
		"@comapeo/core": "3.1.1",
		"@comapeo/ipc": "3.0.0",
		"@comapeo/schema": "1.6.0",
		"@eslint/compat": "1.2.8",
		"@eslint/js": "9.25.1",
		"@ianvs/prettier-plugin-sort-imports": "4.4.1",
		"@mapeo/crypto": "1.0.0-alpha.10",
		"@tanstack/eslint-plugin-query": "5.74.7",
		"@tanstack/react-query": "5.74.7",
		"@testing-library/dom": "10.4.0",
		"@testing-library/react": "16.3.0",
		"@types/node": "22.15.3",
		"@types/react": "19.0.12",
		"@types/react-dom": "19.0.4",
		"@vitest/eslint-plugin": "1.1.43",
		"eslint": "9.25.1",
		"eslint-plugin-react-hooks": "5.2.0",
		"eslint-plugin-testing-library": "7.1.1",
		"fastify": "4.29.0",
		"globals": "16.0.0",
		"husky": "9.1.7",
		"lint-staged": "15.5.1",
		"npm-run-all2": "7.0.2",
		"prettier": "3.5.3",
		"random-access-memory": "6.2.1",
		"react": "19.0.0",
		"react-dom": "19.0.0",
		"tsdoc-markdown": "1.2.0",
		"tshy": "3.0.2",
		"typescript": "5.8.3",
		"typescript-eslint": "8.31.1",
		"vitest": "3.1.2"
	}
}
