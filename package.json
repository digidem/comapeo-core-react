{
	"name": "@comapeo/core-react",
	"version": "7.2.0",
	"description": "React wrapper for working with @comapeo/core",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/digidem/comapeo-core-react.git"
	},
	"keywords": [
		"comapeo"
	],
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/digidem/comapeo-core-react/issues"
	},
	"homepage": "https://github.com/digidem/comapeo-core-react#readme",
	"authors": [
		"Andrew Chou <achou@awana.digital>"
	],
	"type": "module",
	"exports": {
		".": {
			"import": {
				"types": "./dist/esm/index.d.ts",
				"default": "./dist/esm/index.js"
			},
			"require": {
				"types": "./dist/commonjs/index.d.ts",
				"default": "./dist/commonjs/index.js"
			}
		},
		"./package.json": "./package.json"
	},
	"main": "./dist/commonjs/index.js",
	"types": "./dist/commonjs/index.d.ts",
	"module": "./dist/esm/index.js",
	"files": [
		"dist/",
		"docs/API.md"
	],
	"tshy": {
		"project": "./tsconfig.build.json",
		"selfLink": false,
		"exports": {
			".": "./src/index.ts",
			"./package.json": "./package.json"
		}
	},
	"scripts": {
		"docs:generate": "tsdoc --src=src/contexts/*,src/hooks/*,src/lib/types.ts --dest=docs/API.md --noemoji --types",
		"lint:eslint": "eslint --cache .",
		"lint:format": "prettier --cache --check .",
		"lint": "npm-run-all --parallel --continue-on-error --print-label --aggregate-output lint:*",
		"prepack": "tshy",
		"prepare": "husky",
		"test": "vitest run",
		"types": "tsc"
	},
	"peerDependencies": {
		"@comapeo/core": "^5.2.1",
		"@comapeo/ipc": "^6.0.2",
		"@comapeo/schema": "*",
		"@tanstack/react-query": "^5",
		"react": "^18 || ^19"
	},
	"devDependencies": {
		"@comapeo/core": "5.2.1",
		"@comapeo/ipc": "6.0.2",
		"@comapeo/schema": "2.2.0",
		"@eslint/compat": "2.0.0",
		"@eslint/js": "9.39.2",
		"@ianvs/prettier-plugin-sort-imports": "4.7.0",
		"@mapeo/crypto": "1.0.0-alpha.10",
		"@mapeo/default-config": "6.0.0",
		"@mapeo/mock-data": "5.0.0",
		"@tanstack/eslint-plugin-query": "5.91.2",
		"@tanstack/react-query": "5.90.12",
		"@testing-library/dom": "10.4.1",
		"@testing-library/react": "16.3.0",
		"@types/node": "22.19.3",
		"@types/react": "19.2.7",
		"@types/react-dom": "19.2.3",
		"@vitest/eslint-plugin": "1.5.2",
		"eslint": "9.39.2",
		"eslint-plugin-react-hooks": "7.0.1",
		"eslint-plugin-testing-library": "7.13.6",
		"fastify": "4.29.1",
		"globals": "16.5.0",
		"happy-dom": "20.0.11",
		"husky": "9.1.7",
		"lint-staged": "16.2.7",
		"npm-run-all2": "8.0.4",
		"prettier": "3.7.4",
		"random-access-memory": "6.2.1",
		"react": "19.2.3",
		"react-dom": "19.2.3",
		"tsdoc-markdown": "1.4.1",
		"tshy": "3.1.0",
		"typescript": "5.9.3",
		"typescript-eslint": "8.49.0",
		"vitest": "4.0.15"
	}
}
